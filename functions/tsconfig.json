{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared"
  ]
}
