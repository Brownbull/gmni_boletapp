{
  "name": "boletapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "deploy": "npm run build && firebase deploy --only hosting",
    "emulators": "firebase emulators:start --only auth,firestore,storage --project boletapp-d609f --import=./emulator-data --export-on-exit=./emulator-data",
    "emulators:docker": "docker-compose up -d",
    "emulators:docker:stop": "docker-compose down",
    "emulators:docker:logs": "docker-compose logs -f firebase-emulators",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test --ignore-snapshots tests/e2e --grep-invert lighthouse",
    "test:lighthouse": "playwright test tests/e2e/lighthouse.spec.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lighthouse": "lhci autorun",
    "test:coverage": "vitest run tests/unit tests/integration --coverage",
    "test:reset-data": "tsx scripts/reset-test-data.ts",
    "test:view-data": "tsx scripts/view-emulator-data.ts",
    "test:create-user": "tsx scripts/create-test-user.ts",
    "check:bundle": "bash scripts/check-bundle-size.sh",
    "security:audit": "bash scripts/security-audit.sh",
    "security:lint": "eslint -c eslint.config.security.mjs src/",
    "prepare": "husky"
  },
  "dependencies": {
    "firebase": "^10.14.1",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.39.1",
    "@firebase/rules-unit-testing": "^3.0.4",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "c8": "^10.1.3",
    "eslint": "^9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "firebase-admin": "^13.6.0",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "playwright-lighthouse": "^4.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^5.4.0",
    "vitest": "^4.0.13"
  }
}
